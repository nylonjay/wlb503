<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bankscene.bes.welllinkbank.activity.mine.gesture.GestureSetPre">
    <com.bankscene.bes.welllinkbank.view.translucent.TranslucentActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:type="1"
        />
    <RelativeLayout
        android:id="@+id/re_gs_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/use_gesture_login"
            android:layout_centerVertical="true"
            android:textColor="@color/blackText"
            android:textSize="16sp"/>


        <com.bankscene.bes.welllinkbank.view.togglebtn.togglebutton.ToggleButton
            android:id="@+id/tg_use_gs"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/background"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentBottom="true"/>-->
    </RelativeLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/re_show_trail"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="@dimen/mine_item_height"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/show_tail"
            android:layout_centerVertical="true"
            android:textColor="@color/blackText"
            android:textSize="16sp"/>


        <com.bankscene.bes.welllinkbank.view.togglebtn.togglebutton.ToggleButton
            android:id="@+id/tg_show_trail"
            android:layout_width="60dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/background"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentBottom="true"/>-->
    </RelativeLayout>
    <View
        android:id="@+id/v_trail"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:id="@+id/re_change_gs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:paddingLeft="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/changge_gesture_code"
            android:layout_centerVertical="true"
            android:textColor="@color/blackText"
            android:textSize="16sp"/>

        <com.bankscene.bes.welllinkbank.view.IconFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyText"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:layout_marginRight="10dp"
            android:text="@string/wlb_arrow_r"
            app:fontFile="welllbk.ttf"/>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/background"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentBottom="true"/>-->
    </RelativeLayout>


</LinearLayout>
