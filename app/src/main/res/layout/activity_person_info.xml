<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.bankscene.bes.welllinkbank.activity.mine.PersonInfo">
    <com.bankscene.bes.welllinkbank.view.translucent.TranslucentActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:type="1"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:onClick="onHeadImgChange"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:text="@string/head_img"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>


        <com.bankscene.bes.welllinkbank.view.IconFontTextView
            android:id="@+id/it_r"
            android:layout_width="14sp"
            android:layout_height="14sp"
            android:text="@string/wlb_arrow_r"
            android:layout_centerVertical="true"
            app:fontFile="welllbk.ttf"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/iv_round"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/it_r"
            android:layout_marginRight="8dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:text="@string/chinese_name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyText"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:text="@string/en_name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>


        <TextView
            android:id="@+id/tv_en_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyText"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_item_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:text="@string/phone_name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>


        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyText"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>
