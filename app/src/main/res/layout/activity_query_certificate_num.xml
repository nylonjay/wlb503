<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.bankscene.bes.welllinkbank.activity.finance.query.QueryCertificateNum">
    <com.bankscene.bes.welllinkbank.view.translucent.TranslucentActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:type="1"
        />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/actionBar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/base_function_block">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/finance_item_height"
        android:orientation="horizontal">
        <TextView
            android:text="賬號"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"/>
        <TextView
            android:text="1231231233213"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_item_height"
            android:orientation="horizontal">
            <TextView
                android:text="已開立定/特存款"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"/>
            <TextView
                android:text="4筆"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/ll_top"
        android:layout_above="@+id/btn_query"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="@drawable/base_function_block">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                style="@style/TextBigBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:textColor="@color/blue_title"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />


            <TextView
                style="@style/TextBigBlack"
                android:layout_width="0dp"
                android:gravity="center"
                android:textColor="@color/blue_title"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/currency"
                />
            <TextView
                style="@style/TextBigBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_title"
                android:layout_weight="1"
                android:maxLines="2"
                android:gravity="center"
                android:text="@string/certi_num"
                />
            <TextView
                style="@style/TextBigBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_title"
                android:layout_weight="2"
                android:maxLines="2"
                android:gravity="center"
                android:text="@string/out_date"
                />
            <TextView
                style="@style/TextBigBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_title"
                android:layout_weight="1"
                android:maxLines="2"
                android:gravity="center"
                android:text="@string/state"
                />

            <TextView
                style="@style/TextBigBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_title"
                android:layout_weight="1.5"
                android:maxLines="2"
                android:gravity="center"
                android:text="@string/certi_type"
                />

        </LinearLayout>

        <ListView
            android:id="@+id/list_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/white"
            android:divider="@null" />



    </LinearLayout>


    <Button
        android:id="@+id/btn_query"
        style="@style/RoundButton"
        android:layout_marginBottom="15dp"
        android:text="@string/back"
        android:layout_alignParentBottom="true"
        android:onClick="submit"
        android:background="@drawable/selector_button_login"/>
</RelativeLayout>
