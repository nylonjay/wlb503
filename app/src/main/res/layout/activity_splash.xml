<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="3">
        <TextView
            android:id="@+id/tv_version"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="v1.01"
            android:layout_height="wrap_content"
            style="@style/TextWrapBlack"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="139dp"
            android:src="@mipmap/wlb_welcom_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ProgressBar
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:progressDrawable="@color/main_theme_color"
                style="@style/Widget.AppCompat.ProgressBar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actionBarIcon"
                android:textSize="14sp"
                android:text="@string/starting"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@mipmap/wlb_welcom_bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="187dp"
                android:layout_height="26dp"
                android:src="@mipmap/wlb_welcom_words" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackText"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                android:text="CopyRight@2018立橋銀行"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>