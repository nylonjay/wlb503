<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/item_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_item_height"
            >
            <TextView
                style="@style/TextWrapBlack"
                android:text="@string/acc_type"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/tv_actype"
                style="@style/TextWrapBlack"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="外匯通寶"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_item_height"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/TextWrapBlack"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/acnum"
                />

            <TextView
                android:id="@+id/tv_acnum"
                style="@style/TextWrapBlack"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="564987987654654"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_item_height"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/TextWrapBlack"
                android:text="@string/curbla"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_curbla"
                style="@style/TextWrapBlack"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="5464654654.66"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/finance_item_height"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/TextWrapBlack"
                android:text="@string/useful_bla"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_useful"
                style="@style/TextWrapBlack"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="899846545654.11"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
